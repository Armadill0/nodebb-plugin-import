{
	"log": "debug",

	"convert": "bbcode-to-md",

	"storageDir": "/path/to/storage",

	"nbb": {
		"setup": {
			"runFlush": true
		}
	},

	"redirectTemplatesStrings": {
		"users": {
			"oldPath": "/old/users/<%= _uid %>",
			"newPath": "/user/<%= userslug %>"
		},
		"categories": {
			"oldPath": "/old/categories/<%= _cid %>",
			"newPath": "/category/<%= cid %>"
		},
		"topics": {
			"oldPath": "/old/topics/<%= _tid %>",
			"newPath": "/topic/<%= tid %>"
		},
		"posts": {
			"oldPath": "/old/topics/<%= _tid %>#<%= _pid %>",
			"newPath": "/topic/<%= tid %>#<%= pid %>"
		}
	}
}
